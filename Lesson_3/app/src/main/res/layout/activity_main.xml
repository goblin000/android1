<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorBackground"
    >


    <TextView
        android:id="@+id/textTownName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textViewMarginBottomPort"
        android:text="@string/selectActivity_btn_city0"
        android:layout_margin="@dimen/textViewMarginPort"
        android:textSize="@dimen/textViewSizePort"
        android:textColor="@color/colorShowTown"
        android:textAlignment="center"
        />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/map"
        android:layout_below="@id/textTownName"
        />

    <Button
        android:id="@+id/btnSelectTown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/buttonMarginPort"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_anotherTown"
        android:layout_below="@id/imageView"
        android:textSize="@dimen/buttonSizePort"
        />

</RelativeLayout>